/**app.wxss**/
@import "/style/iconfont.wxss";

page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
}

.root {
  height: 100%;
  width: 100%;
  z-index: 1;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  z-index: 4;
  background: #fff;
  min-height: 100%;
  transform: scale(1) translate(0%, 0%);
  -webkit-transform: scale(1) translate(0%, 0%);
  transition: all 0.4s;
  -webkit-transition: all 0.4s;
} 

.container.fixed {
  transform: none;
  -webkit-transform: none;
  transition: none;
  -webkit-transition: none;
}

.top-widget-wrapper {
  position: relative;
  width: 100%;
}

.main {
  width: 100%;
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
}
