.top-widget .btn-wrap {
  position: absolute;
  top: 215rpx;
  right: 30rpx;
  z-index: 10;
  display: flex;
  flex-direction: row;
}

.top-widget .btn-wrap .settings,
.top-widget .btn-wrap .add {
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  background: rgba(254, 254, 254, .9);
  margin-left: 15rpx;
}


.top-widget .btn-wrap view:first-child {
  margin-left: 0!important;
}

.top-widget .btn-wrap .settings .icon{
  transform: scale(-1, 1);
  -webkit-transform: scale(-1, 1);
  font-size: 38rpx;
  text-align: center;
  line-height: 88rpx;
}

.top-widget .btn-wrap .add .icon {
  font-size: 50rpx;
  text-align: center;
  line-height: 88rpx;
}

.main {
  width: 100%;
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
}

.main .recommend {
  width: auto;
  height: auto;
  margin-right: 30rpx;
  margin-left: 30rpx;
  margin-top: 50rpx;
}

.main .recommend .list {
  width: 140%;
}

.main .recommend .list .people {
  float: left;
  height: 120rpx;
  width: 120rpx;
  border: .5rpx solid #f6f6f6;
}

.main .recommend .list .people:nth-child(1) {
  float: left;
  height: 240rpx;
  width: 240rpx;
}

.main .recommend .list .people image {
  max-height: 100%;
  max-width: 100%;
}

.main .recommend .change-btn {
  background: rgb(179, 179, 179);
  color: #fff;
  font-size: 36rpx;
  width: 200rpx;
  height: 100rpx;
  border-radius: 5%;
  text-align: center;
  line-height: 100rpx;
  float: right;
  margin-top: 20rpx;
}

.main .recommend .title {
  width: 200rpx;
  height: 90rpx;
  background: rgb(149, 149, 149);
  color: #fff;
  text-align: center;
  font-size: 38rpx;
  line-height: 85rpx;
}
