/**app.wxss**/
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
}

.root {
  height: 100%;
  width: 100%;
  z-index: 1;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  z-index: 4;
  background: #f6f6f6;
  min-height: 100%;
  transform: scale(1) translate(0%, 0%);
  -webkit-transform: scale(1) translate(0%, 0%);
  transition: all 0.4s;
  -webkit-transition: all 0.4s;
} 

.container.left {
  transform: scale(.9) translate(-35%, 0%);
  -webkit-transform: scale(.9) translate(-35%, 0%);
  transition: all 0.4s;
  -webkit-transition: all 0.4s;
}

.side-bar {
  position: fixed;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
  background: #222;
}

.side-bar .content {
  position: fixed;
  top: 400rpx;
  right: 20rpx;
  color: #fff;
  width: 300rpx;
  display: flex;
  flex-direction: column;
}

.side-bar .content .btn-wrap {
  margin-right: 50rpx;
}

.side-bar .content .btn-wrap .btn {
  margin-top: 50rpx;
  text-align: right;
  font-size: 33rpx;
}

.side-bar .content .close {
  display: flex;
  flex-direction: row;
  text-align: right;
  font-size: 33rpx;
  margin-top: 180rpx;
  margin-right: 50rpx;
  justify-content: flex-end;
  z-index: 40;
}

.side-bar .content .close .icon {
  font-size: 40rpx;
  color: #fff;
  margin-right: 10rpx;
}

.side-bar .content .close .text {
  font-size: 33rpx;
}

.cover {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 40;
  display: none;
}

.cover.left {
  display: block;
  transform: scale(.9) translate(-35%, 0%);
  -webkit-transform: scale(.9) translate(-35%, 0%);
  transition: all 0.4s;
  -webkit-transition: all 0.4s;
}

.top-widget {
  position: relative;
  width: 100%;
}

.top-widget .top-bg {
  z-index: 5;
  width: 100%;
  height: 320rpx;
}


.top-widget .user-info {
  position: absolute;
  top: 195rpx;
  left: 30rpx;
  z-index: 10;
  display: flex;
  flex-direction: row;
  width: auto;
}

.top-widget .user-info .user-avatar {
  width: 170rpx;
  height: 170rpx;
  border: 1rpx solid #aaa;
  background-size: cover;
  background-color: white;
  border-radius: 50%;
}

.top-widget .user-info .user-nickname {
  text-align: center;
  font-size: 40rpx;
  margin-top: 50rpx;
  color: #fff;
  line-height: 80rpx;
  margin-left: 15rpx;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.top-widget.mode-2  .user-info{
  position: absolute;
  top: 105rpx;
  left: 50rpx;
  z-index: 10;
  display: flex;
  flex-direction: column;
  width: auto;
}

.top-widget.mode-2 .user-info .user-avatar {
  width: 110rpx;
  height: 110rpx;
  border: 1rpx solid #aaa;
  background-size: cover;
  background-color: white;
  border-radius: 0;
}

.top-widget.mode-2 .user-info .user-nickname {
  text-align: center;
  font-size: 40rpx;
  margin-top: 5rpx;
  color: #fff;
  line-height: 80rpx;
}

top-widget.mode-2 .btn-wrap {
  position: absolute;
  top: 170rpx;
  right: 30rpx;
  z-index: 10;
  display: flex;
  flex-direction: row;
}

