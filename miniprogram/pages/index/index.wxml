        <text>快速新建云函数</text>
      </navigator>
    </view> -->
  
  </view>

  <view class="side-bar">
    <view class="content">
      I am here
    </view>
  </view>

  <view class="cover {{sideBar ? 'left' : ''}}" bindtap="switchSideBar"></view>

</view>
