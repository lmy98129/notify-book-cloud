.section_gap {
  position: relative;
  overflow: hidden;
}

.section_gap .fixed-list {
  position: absolute;
  left: 0;
  z-index: 9999;
  background-color: #fff;
  border-right: 1px solid #eee;
  box-shadow: 3px 0 3px #ccc;
  padding-top: 1px;
  display: none;
}
.section_gap .fixed-list.show{
  display: block;
}
.fixedListContent {
  height: 200px;
}

.section_gap .fixed-list .content {
  border-bottom: 1px solid #eee;
  padding-right: 10px;
}

.table {
  border-top: 1px solid #eee;
  border-left: 1px solid #eee;
  width: 750rpx;
  height: 1000rpx;
}

.table .table-inner {
  height: 900rpx;
}

#table-body {
  height: 900rpx;
}

.thead {
  box-shadow: 0 3px 3px #ccc;
}

.body {
  display: table;
}

.tr {
  border-bottom: 1px solid #eee;
}

.th {
  display: inline-block;
  white-space: nowrap;
}

.td {
  white-space: word-break;
}

.td, .th {
  border-right: 1px solid #eee;
  display: table-cell;
}

.content {
  box-sizing: border-box;
  padding: 3px 5px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content.array {
  display: flex;
  flex-direction: column;
}

.content.array .array-item {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

