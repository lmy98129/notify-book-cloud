/* pages/profile-edit/profile-edit.wxss */

page {
  background: rgb(203, 203, 203);
}

.main {
  margin: 20rpx;
  background: #fff;
  width: auto;
  text-align: center;
  border-radius: 4%;
  height: 100%;
  padding-top: 50rpx;
}

.avatar image {
  width: 170rpx;
  height: 170rpx;
  border: 1rpx solid #aaa;
  background-size: cover;
  background-color: white;
  border-radius: 50%;
  margin: 0 auto;
}

.avatar .change {
  font-size: 35rpx;
  color: #777;
  margin-top: 25rpx;
  margin-bottom: 18rpx;
}

.item {
  display: flex;
  flex-direction: row;
  width: 88%;
  margin: 35rpx auto;
  background: rgb(220, 220, 220);
  padding-left: 25rpx;
  text-align: left;
  font-size: 35rpx;
}

.item view {
  padding-top: 6rpx;
}

.item.add-wrap {
  text-align: center;
  padding-left: 0;
  width: 92%;
  display: block;
  margin-top: 20rpx;
  margin-bottom: 0rpx;
  color: rgb(110, 110, 110);
  line-height: 70rpx;
  border-radius: 0;
}

