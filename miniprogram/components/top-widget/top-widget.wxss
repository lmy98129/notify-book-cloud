/* components/top-widget/top-widget.wxss */
@import "/style/iconfont.wxss";
@import "/style/specialPhone.wxss";

.top-widget {
  position: relative;
  width: 100%;
}

.top-widget .top-bg {
  z-index: 5;
  width: 100%;
  height: 320rpx;
}

.top-widget.fixed {
  visibility: hidden;
}

.top-widget .user-info {
  position: absolute;
  top: 195rpx;
  left: 30rpx;
  z-index: 10;
  display: flex;
  flex-direction: row;
  width: auto;
}

.top-widget .contact-title {
  position: absolute;
  top: 190rpx;
  left: 30rpx;
  z-index: 10;
  display: flex;
  flex-direction: row;
  width: auto;
  font-size: 90rpx;
  color: #fff;
  text-shadow:2rpx 2rpx 5rpx #444;
}

.top-widget .user-info .user-avatar {
  width: 170rpx;
  height: 170rpx;
  border: 1rpx solid #aaa;
  background-size: cover;
  background-color: white;
  border-radius: 50%;
}

.top-widget .user-info .user-nickname {
  text-align: center;
  font-size: 40rpx;
  margin-top: 50rpx;
  color: #fff;
  line-height: 80rpx;
  margin-left: 15rpx;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-shadow:2rpx 2rpx 5rpx #444;
}

.top-widget.mode-2  .user-info{
  position: absolute;
  top: 105rpx;
  left: 50rpx;
  z-index: 10;
  display: flex;
  flex-direction: column;
  width: auto;
}

.top-widget.mode-2 .user-info .user-avatar {
  width: 110rpx;
  height: 110rpx;
  border: 1rpx solid #aaa;
  background-size: cover;
  background-color: white;
  border-radius: 0;
}

.top-widget.mode-2 .user-info .user-nickname {
  text-align: center;
  font-size: 40rpx;
  margin-top: 5rpx;
  color: #fff;
  line-height: 80rpx;
}

.top-widget.mode-2 .btn-wrap {
  position: absolute;
  top: 170rpx;
  right: 30rpx;
  z-index: 10;
  display: flex;
  flex-direction: row;
}


.top-widget .btn-wrap {
  position: absolute;
  top: 215rpx;
  right: 30rpx;
  z-index: 10;
  display: flex;
  flex-direction: row;
}

.top-widget .back-icon{
  font-size: 48rpx;
  color: #fff;
  position: fixed;
  left: 30rpx;
  padding-top:58rpx;
  top: 0;
  text-shadow:2rpx 2rpx 5rpx #444;  
  line-height: 50rpx;
}

.top-widget.center .user-info{
  flex-direction: column;
  width: 100%;
  left: 0;
  top: 165rpx;
}

.top-widget.center .user-info .user-avatar {
  margin: 0 auto;
  width: 200rpx;
  height: 200rpx;
}

.top-widget.center .user-info .user-nickname {
  margin-top: 6rpx;
  margin-right: auto;
  margin-left: auto;
  color: #000;
  text-shadow: none;  
}

.top-widget.center .btn-wrap {
  width: 95%;
  right: auto;
  flex-direction: row-reverse;
  justify-content: space-between;
  left: 10rpx;
}

.top-widget-title .back-icon {
  position: fixed;
  font-size: 42rpx;
  left: 35rpx;
  z-index: 60;
  line-height: 65rpx;
  color: #fff;
}

.top-widget-title {
  position: fixed;
  top: 0;
  width: 100%;
  background: rgb(81, 81, 81);
  padding-bottom: 30rpx;
  padding-top: 60rpx;
  color: #fff;
  display: flex;
  flex-direction: row;
  z-index: 999;
}

.top-widget-title .title {
  /* position: fixed; */
  /* width: 100%; */
  text-align: center;
  font-size: 40rpx;
  padding-top: 5rpx;
  max-width: 280rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 0 auto;
}

.top-widget-title-holder {
  padding-top: 50rpx;
  padding-bottom: 85rpx;
}

.top-widget.fixed .back-icon{
  visibility: visible!important;
}

.top-widget-fixed {
  display: none;
}

.top-widget-fixed.fixed {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: fixed;
  top: 0rpx;
  width: 100%;
  background: #fff;
  z-index: 50;
  padding-top: 60rpx;
  padding-bottom: 20rpx;
}

.top-widget-fixed.fixed .user-info{
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
}

.top-widget-fixed.fixed .user-info .user-avatar{
  width: 60rpx;
  height: 60rpx;
  border: 1rpx solid #aaa;
  background-size: cover;
  background-color: white;
  border-radius: 50%;
}

.top-widget-fixed.fixed .user-info .user-nickname {
  text-align: center;
  font-size: 35rpx;
  line-height: 66rpx;
  margin-left: 15rpx;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.top-widget-fixed.fixed .btn-wrap {
  display: flex;
  flex-direction: row;
  padding-right: 240rpx;
}

.top-widget-fixed.fixed .btn-wrap view:nth-child(2) {
  margin-left: 30rpx;
}

.top-widget-fixed.fixed .btn-wrap .add .icon {
  font-size: 45rpx;
  text-align: center;
  line-height: 60rpx;
}

.top-widget-fixed.fixed .btn-wrap .settings {
  z-index: 60;
}

.top-widget-fixed.fixed .btn-wrap .settings .icon {
  transform: scale(-1, 1);
  -webkit-transform: scale(-1, 1);
  font-size: 35rpx;
  text-align: center;
  line-height: 60rpx;
}

.top-widget-fixed.fixed .contact-title {
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
  font-size: 40rpx;
  line-height: 68rpx;
}

.top-widget-fixed.fixed .contact-title .user-nickname {
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.submit-no-style {
  background-color: transparent;
  padding: 0;
  margin: 0;
  display: inline;
  position: static;
  border: 0;
  padding-left: 0;
  padding-right: 0;
  border-radius: 0;
  font-size: 0rpx;
  color: transparent;
}

.submit-no-style::after {
  content: '';
  width: 0;
  height: 0;
  -webkit-transform: scale(1);
  transform: scale(1);
  display: none;
  background-color: transparent;
  border: 0px;
}