/* components/top-widget/top-widget.wxss */
@import "/style/iconfont.wxss";

.top-widget {
  position: relative;
  width: 100%;
}

.top-widget .top-bg {
  z-index: 5;
  width: 100%;
  height: 320rpx;
}

.top-widget.fixed {
  visibility: hidden;
}

.top-widget .user-info {
  position: absolute;
  top: 195rpx;
  left: 30rpx;
  z-index: 10;
  display: flex;
  flex-direction: row;
  width: auto;
}

.top-widget .user-info .user-avatar {
  width: 170rpx;
  height: 170rpx;
  border: 1rpx solid #aaa;
  background-size: cover;
  background-color: white;
  border-radius: 50%;
}

.top-widget .user-info .user-nickname {
  text-align: center;
  font-size: 40rpx;
  margin-top: 50rpx;
  color: #fff;
  line-height: 80rpx;
  margin-left: 15rpx;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.top-widget.mode-2  .user-info{
  position: absolute;
  top: 105rpx;
  left: 50rpx;
  z-index: 10;
  display: flex;
  flex-direction: column;
  width: auto;
}

.top-widget.mode-2 .user-info .user-avatar {
  width: 110rpx;
  height: 110rpx;
  border: 1rpx solid #aaa;
  background-size: cover;
  background-color: white;
  border-radius: 0;
}

.top-widget.mode-2 .user-info .user-nickname {
  text-align: center;
  font-size: 40rpx;
  margin-top: 5rpx;
  color: #fff;
  line-height: 80rpx;
}

.top-widget.mode-2 .btn-wrap {
  position: absolute;
  top: 170rpx;
  right: 30rpx;
  z-index: 10;
  display: flex;
  flex-direction: row;
}


.top-widget .btn-wrap {
  position: absolute;
  top: 215rpx;
  right: 30rpx;
  z-index: 10;
  display: flex;
  flex-direction: row;
}

.top-widget .back-icon {
  font-size: 48rpx;
  color: #fff;
  position: fixed;
  left: 30rpx;
  padding-top:50rpx;
}

.top-widget.fixed .back-icon{
  visibility: visible!important;
}

.top-widget-fixed {
  display: none;
}

.top-widget-fixed.fixed {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: fixed;
  top: 0rpx;
  width: 100%;
  background: #fff;
  z-index: 50;
  padding-top: 70rpx;
  padding-bottom: 20rpx;
}

.fixed.ip5 {
  padding-top: 70rpx;
}

.fixed.ip6 {
  padding-top: 60rpx;
}

.fixed.ip6p {
  padding-top: 50rpx;
}

.fixed.ipx {
  padding-top: 105rpx;
}

.top-widget-fixed.fixed .user-info{
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
}

.top-widget-fixed.fixed .user-info .user-avatar{
  width: 60rpx;
  height: 60rpx;
  border: 1rpx solid #aaa;
  background-size: cover;
  background-color: white;
  border-radius: 50%;
}

.top-widget-fixed.fixed .user-info .user-nickname {
  text-align: center;
  font-size: 35rpx;
  line-height: 66rpx;
  margin-left: 15rpx;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.top-widget-fixed.fixed .btn-wrap {
  display: flex;
  flex-direction: row;
  padding-right: 240rpx;
}

.top-widget-fixed.fixed .btn-wrap view:nth-child(2) {
  margin-left: 30rpx;
}

.top-widget-fixed.fixed .btn-wrap .add .icon {
  font-size: 45rpx;
  text-align: center;
  line-height: 60rpx;
}

.top-widget-fixed.fixed .btn-wrap .settings {
  z-index: 60;
}

.top-widget-fixed.fixed .btn-wrap .settings .icon {
  transform: scale(-1, 1);
  -webkit-transform: scale(-1, 1);
  font-size: 35rpx;
  text-align: center;
  line-height: 60rpx;
}