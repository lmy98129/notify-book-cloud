/* components/settings-item/settings-item.wxss */
@import "/style/iconfont.wxss";

.settings{
  height: auto;
  display: flex;
  padding: 0 0 0 40rpx;
  flex-direction: row;
  box-sizing: border-box;
  justify-content: space-between;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  align-items: center;
}

.settings:last-child {
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.settings-text{
  font-size: 34rpx;
  color: #000;
}

.icon-fanhui1.icon {
  font-size: 45rpx;
  transform: rotate(180deg) scale(1.3, 1);
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  color: #666;  
}

.settings-arrow {
  display: flex;
  flex-direction: row;
  margin: 0 30rpx 0 0;
  align-items: center;
}

.settings-arrow .hint {
  font-size: 30rpx;
  color: #666;
  line-height: 97rpx;
}