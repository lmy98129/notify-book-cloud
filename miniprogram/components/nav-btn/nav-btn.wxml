<!--components/nav-btn/nav-btn.wxml-->
<form bindsubmit="getFormid" report-submit='true'>
  <button class="submit-no-style" form-type='submit'>
    <view class="{{btnType}} btn-wrap">
      <view class="iconfont {{iconType}} icon" bindtap="tapBtn"></view>
      <view class="red-dot" wx:if="{{isRedDot}}"></view>
    </view>
  </button>
</form>