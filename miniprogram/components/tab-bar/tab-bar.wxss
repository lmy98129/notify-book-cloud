/* components/tab-bar/tab-bar.wxss */

.tabbar {
  width: 85%;
  display: flex;
  flex-direction: row;
  margin-left: auto;
  margin-right: auto;
  justify-content: space-around;
}

.tabbar .tabbar-item {
  font-size: 40rpx;
  color: #555;
}

.tabbar .tabbar-item.selected {
  color: #222;
}

.tabbar .tabbar-item.selected:after {
  content: "";
  display: block;
  position: relative;
  bottom: -5rpx;
  left: 0;
  right: 0;
  height: 5rpx;
  background-color: #222;
}